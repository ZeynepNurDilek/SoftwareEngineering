<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	>

    <EditText
        android:id="@+id/kisi_ekle_uye_adi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/kisi_ekle_uye_adi"
        android:layout_alignParentLeft="true"
        android:text="Üye Adı :" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="47dp"
        android:text="Üye Soyadı :" />

    <EditText
        android:id="@+id/kisi_ekle_uye_soyadi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/kisi_ekle_uye_adi"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/kisi_ekle_uye_soyadi"
        android:layout_marginTop="72dp"
        android:text="Telefon No :" />

    <EditText
        android:id="@+id/kisi_ekle_tel_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/kisi_ekle_uye_soyadi"
        android:ems="10"
        android:inputType="phone" />

    <Button
        android:id="@+id/kisi_ekle_btn_kaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="80dp"
        android:text="Kişi&apos;yi Kaydet" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/kisi_ekle_btn_kaydet"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="46dp"
        android:text="E-mail" />

    <EditText
        android:id="@+id/kisi_ekle_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/kisi_ekle_tel_no"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/kisi_ekle_anamenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="24dp"
        android:text="Ana Menü&apos;ye Dön" />
    
</RelativeLayout>