<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnEtkinlikler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:text="Etkinlikler" />

    <Button
        android:id="@+id/btnGorevVer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnEtkinlikler"
        android:layout_marginTop="24dp"
        android:text="Görev Ver" />

    <Button
        android:id="@+id/btnToplantilar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnGorevVer"
        android:layout_marginTop="34dp"
        android:text="Toplantılar" />

    <Button
        android:id="@+id/btnKisiEkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnToplantilar"
        android:layout_marginTop="26dp"
        android:text="Kişi  Ekle" />

    <Button
        android:id="@+id/btnAjanda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnKisiEkle"
        android:layout_marginTop="32dp"
        android:text="Ajanda" />

</RelativeLayout>